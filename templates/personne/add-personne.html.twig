{% extends 'template.html.twig' %}
{% block body %}
    <div class="container mt-5">
        {{ form_start(form) }}
        <div class="row mb-3">
            <div class="col">
                {{ form_row(form.prenom) }}
            </div>
            <div class="col">
                {{ form_row(form.nom) }}
            </div>
        </div>
        {{ form_rest(form) }}
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}

